{
  "name": "yetanotherplugin/tests",
  "description": "Unit tests for YetAnotherPlugin WordPress plugin",
  "license": "GPL-2.0-or-later",
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "brain/monkey": "^2.6",
    "wordpress/wordpress-tests-lib": "*"
  },
  "autoload": {
    "psr-4": {
      "YAP\\Tests\\": "tests/"
    },
    "files": [
      "tests/bootstrap.php"
    ]
  },
  "scripts": {
    "test": "phpunit --configuration phpunit.xml",
    "test:watch": "phpunit --configuration phpunit.xml --watch",
    "test:coverage": "phpunit --configuration phpunit.xml --coverage-html coverage",
    "test:unit": "phpunit --configuration phpunit.xml --testsuite unit",
    "test:integration": "phpunit --configuration phpunit.xml --testsuite integration"
  }
}
